@model Microsoft.SyndicationFeed.ISyndicationItem

<div class="latest_container latest_container--event">
	<div class="latest_date d-flex align-items-center justify-content-center text-center">@Model.Published.ToString("MMM") @Model.Published.Day</div>
    <div class="latest_meta d-flex flex-column justify-content-center">

        <h3 class="latest_title"><a href="@Model.Links.First().Uri">@Model.Title</a></h3>
        <p class="latest_copy">
            @if (!String.IsNullOrEmpty(Model.Description))
                {
            @Model.Description.PlainTextTruncate(175)
                }
                else
                {
            <span>(No description listed)</span>
                }
        </p>
    </div>
</div>