@model (IEnumerable<dotnetfoundation.Models.MeetupEvent> Events, int DescriptionLength)

@foreach (var item in Model.Events)
{
    <div class="latest_container latest_container--event">
        <div class="latest_date d-flex align-items-center justify-content-center text-center">@item.Date.ToString("MMM") @item.Date.Day</div>
        <div class="latest_meta d-flex flex-column justify-content-center">

            <h3 class="latest_title"><a href="@item.EventUrl">@item.Group.Name</a></h3>
            <p class="latest_copy">
                @if (!String.IsNullOrEmpty(item.Description))
                {
                    @item.Description.PlainTextTruncate(Model.DescriptionLength)
                }
                else
                {
                    <span>(No description listed)</span>
                }
            </p>
        </div>
    </div>
}
